---
import Card from "../components/Card.astro";
import LinkColumn from "../components/LinkColumn.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Frontend Mentor | Insure landing page">
  <!-- TODO: handle zoom-in issues -->
  <!-- TODO: change spacer padding bottoms to margin bottoms  -->
  <!-- TODO: handle font loading layout shifts  -->
  <header class="relative z-10 py-5 bg-my_neutral-100">
    <div
      class="flex justify-between items-center max-w-6xl mx-auto uppercase font-karla font-semibold tracking-widest text-sm"
    >
      <div>
        <img src="images/logo.svg" alt="insure" />
      </div>

      <nav>
        <ul class="flex gap-5 items-center">
          {
            ["How we work", "Blog", "Account"].map((navItem) => (
              <li>
                <a
                  href="#"
                  class="text-my_neutral-800 hover:text-my_neutral-900"
                >
                  {navItem}
                </a>
              </li>
            ))
          }
          <li>
            <a
              href="#"
              class="inline-block px-6 py-2 border-2 text-my_neutral-900 border-my_neutral-900 hover:bg-my_neutral-900 hover:text-my_neutral-100"
              >View plans</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <section class="relative z-0 text-my_neutral-100">
      <!-- Decoration for the section -->
      <!-- TODO: handle responsive decoration & image switching -->
      <div class="absolute -z-10 w-full h-4/6 bg-primary-900"></div>
      <img
        src="images/bg-pattern-intro-right-desktop.svg"
        alt=""
        class="absolute z-10 -right-2 -top-20"
      />
      <img
        src="images/bg-pattern-intro-left-desktop.svg"
        alt=""
        class="absolute z-10 -left-2 -bottom-20"
      />

      <!-- Actual content -->
      <div class="pt-28"></div>
      <div class="max-w-6xl mx-auto grid grid-cols-2 gap-10">
        <picture class="order-2">
          <!-- TODO: image loading is pending -->
          <!-- TODO: fix weird image right margin -->
          <source type="image/jpg" srcset="" />
          <img
            src="images/image-intro-desktop.jpg"
            alt="a familiy of four taking each other's hand"
          />
        </picture>
        <div>
          <!-- Line decoration -->
          <div class="w-40 pt-px bg-my_neutral-100"></div>
          <!-- TODO: make space breaks where they should go -->
          <div class="pt-12"></div>
          <h1 class="text-7xl font-dm_serif">Humanizing your insurance.</h1>
          <div class="pt-6"></div>
          <p class="text-sm leading-6 tracking-wider">
            Get your life insurance coverage easier and faster. We blend our
            expertise and technology to help you find the plan that's right for
            you. Ensure you and your loved ones are protected.
          </p>
          <div class="pt-8"></div>
          <a
            href="#"
            class="inline-block px-6 py-2 font-karla font-semibold text-sm border-2 uppercase border-my_neutral-100 tracking-widest hover:bg-my_neutral-100 hover:text-primary-900"
            >View plans</a
          >
        </div>
      </div>
      <div class="pt-28"></div>
    </section>

    <section class="max-w-6xl mx-auto">
      <div class="pt-5"></div>
      <div class="w-40 pt-px bg-primary-900"></div>
      <div class="pt-16"></div>
      <h1 class="text-7xl font-dm_serif">We're different</h1>
      <div class="pt-24"></div>
      <!-- TODO: make grid responsive -->
      <div class="grid grid-cols-3 gap-4">
        <Card
          title="Snappy Process"
          description="Our application process can be completed in minutes, not hours. Don't get stuck filling in tedious forms."
          iconSrc="images/icon-snappy-process.svg"
        />
        <Card
          title="Affordable Prices"
          description="We don't want you worrying about high monthly costs. Our prices may be low, but we still offer the best coverage possible."
          iconSrc="images/icon-affordable-prices.svg"
        />
        <Card
          title="People First"
          description="Our plans aren't full of conditions and clauses to prevent payouts. We make sure you're covered when you need it."
          iconSrc="images/icon-people-first.svg"
        />
      </div>
    </section>

    <div class="pt-36"></div>
    <section
      class="relative z-0 flex items-center justify-between max-w-6xl mx-auto p-16 bg-primary-900 text-my_neutral-100 overflow-hidden"
    >
      <!-- Decoration -->
      <img
        src="images/bg-pattern-how-we-work-desktop.svg"
        alt=""
        class="absolute -z-10 right-0 top-0"
      />

      <!-- Actual content -->
      <h1 class="text-6xl font-dm_serif">
        Find out more <br />about how we work
      </h1>
      <a
        href="#"
        class="z-10 inline-block px-6 py-2 text-my_neutral_100 font-karla font-semibold text-sm border-2 uppercase border-my_neutral-100 tracking-widest whitespace-nowrap hover:bg-my_neutral-100 hover:text-primary-900"
        >How we work</a
      >
    </section>
    <div class="pt-36"></div>
  </main>

  <footer class="relative z-0 bg-my_neutral-100 text-primary-900">
    <!-- Decoration for the section -->
    <img
      src="images/bg-pattern-footer-desktop.svg"
      alt=""
      class="absolute -z-10 top-0 left-2"
    />
    <!-- Actual content -->
    <div class="max-w-6xl mx-auto">
      <div class="pt-16"></div>
      <div class="flex items-center justify-between">
        <div>
          <img src="images/logo.svg" alt="insure logo" />
        </div>

        <nav>
          <ul class="inline-flex items-center gap-4">
            {
              ["facebook", "twitter", "pinterest", "instagram"].map(
                (socialName) => (
                  <li>
                    <a href="#" class="hover:bg-black">
                      <img src={`images/icon-${socialName}.svg`} alt="" />
                      <span class="sr-only">socialName</span>
                    </a>
                  </li>
                )
              )
            }
          </ul>
        </nav>
      </div>
      <div class="pt-8"></div>
      <div class="pt-px bg-my_neutral-800"></div>
      <div class="pt-12"></div>
      <div class="grid grid-cols-4">
        <LinkColumn
          title="Our company"
          links={["How we work", "Why Insure?", "View plans", "Reviews"]}
        />
        <LinkColumn
          title="Help me"
          links={["FAQ", "Terms of use", "Privacy policy", "Cookies"]}
        />
        <LinkColumn title="Contact" links={["Sales", "Support", "Live chat"]} />
        <LinkColumn title="Others" links={["Careers", "Press", "Licenses"]} />
      </div>
      <div class="pt-16"></div>
      <p class="text-center">
        Challenge by
        <a
          href="https://www.frontendmentor.io?ref=challenge"
          target="_blank"
          class="text-primary-900 font-bold">Frontend Mentor</a
        >. Coded by Pedro Alonso Moreno Salcedo.
      </p>
      <div class="pt-8"></div>
    </div>
  </footer>
</Layout>
